<h1>Listing events</h1>

<table>
  <tr>
    <th>Title</th>
    <th>City</th>
    <th>Map</th>
    <th>Starts at</th>
    <th>Summary</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.title %></td>
    <td><%= event.city %></td>
    <td><%= event.map %></td>
    <td><%= event.starts_at %></td>
    <td><%= event.summary %></td>
    <td><%= event.body %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

